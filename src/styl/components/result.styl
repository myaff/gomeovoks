.result {
	.layout--desktop & {
		padding-top: 200px;
	}
	.layout--mobile & {
		padding: 2.5rem 1.25rem 0;
	}
	
	.layout--desktop &__box {
		background: url("../img/noise.png") center repeat;
	}
	
	&__card {
		padding: 3rem 2.5rem 6.25rem;
		margin-bottom: 3rem;
		z-index: 3;
		
		.layout--desktop & {
			margin-top: -2.5rem;
		}
		.layout--mobile & {
			padding: 2.5rem 2.5rem 8rem;
		}
		
		for $key, $color in $color-map {
			&--{$key} {
				background: $color;
			}
		}
	}
	
	&__hand {
		margin-top: -150px;
		z-index: 4;
		flexy(flex-end, flex-end);
		
		img {
			display: block;
		
			.layout--mobile & {
				margin: 0 -2.5rem auto 0;
			}
		}
	}
	
	&__title {
		padding: 1.25rem 2.5rem;
		margin-bottom: 2.5rem;
		background: $dark;
		color: $white;
		font: 50px/1 $font-base;
		
		.layout--mobile & {
			font-size: 2.5rem;
		}
		
		.num {
			margin-right: 1rem;
			
			for $key, $color in $color-map {
				^[0]__card--{$key} & {
					color: $color;
				}
			}
		}
	}
	&__text {
		font: 400 22px/1.36 $font-base;
		color: $dark;
		
		^[0]__card--red & {
			color: $white;
		}
	}
}