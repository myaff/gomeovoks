.header {
	fixed(0px, 0px);
	width: 100vw;
	z-index: 9;
	background: $dark;
	color: white;
	
	.layout & {
		width: 100vw;
	}
	
	&__content {
		padding: 20px 0;
		flexy(space-between, center);
		z-index: 2;
	}
	
	&__logo,
	&__text {
		line-height: 1.25rem;
		vertical-align: middle;
	}
	
	&__text {
		font: 600 1rem/1 $font-util;
		text-transform: uppercase;
		text-align: right;
		
		.layout--mobile & {
			display: none;
		}
		.layout--mobile.layout--home & {
			display: block;
			absolute(6.25rem);
			right: 0;
			color: $black;
			opacity: 0.3;
		}
	}
	
	&__logo {
		&--maxim {
			flex: 0 0 5rem;
			
			.icon {
				size(5rem, 1.25rem);
			}
		}
		
		.text {
			font: 400 1.5rem/1.25rem $font-util;
			text-transform: uppercase;
			text-align: center;
			vertical-align: middle;

			a{
				color: #fff;
			}
		}
		
		.layout--mobile & {
			opacity: 0.5;
		}
	}
	
}